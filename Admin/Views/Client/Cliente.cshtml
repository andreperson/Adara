@model Domain.ModelView.ClienteModelView


@section Scripts {


    <script type="text/javascript">
        //load
        $(document).ready(function () {
            var id = $("#repreid").val();

            if (id == 0) {
                $("#divrepre").css("display", "");
            }


            $('#dtFundacao').mask('99/99/9999');
        });
    </script>

}


@{
    ViewBag.Title = "RepreSis";
}
<div id="submenu_tab">
    <a href="@Domain.Util.config.UrlSite/Client/Cliente" class="btn btn-sm btn-default btn-flat">Cliente</a>
    <a href="@Domain.Util.config.UrlSite/ClientType/ClienteTipo" class="btn btn-sm btn-default btn-flat">Cliente Tipo</a>
</div>


@using (Html.BeginForm("Cliente", "Client", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
    <div class="main-content">
        <h2>Adicionar Cliente</h2>

        <div style="color: #ff6a00; font-size: large; padding: 20px 20px 20px 20px;">
            @ViewBag.erro
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.ClientesTipos)
        </div>
        <div class="inputgrande">
            @Html.DropDownListFor(x => x.clientetipoid, new SelectList(Model.ClientesTipos, "clientetipoid", "descricao"))
            @Html.ValidationMessageFor(model => model.clientetipoid)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CNPJ)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.CNPJ)
            @Html.ValidationMessageFor(model => model.CNPJ)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RazaoSocial)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.RazaoSocial)
            @Html.ValidationMessageFor(model => model.RazaoSocial)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Fantasia)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.Fantasia)
            @Html.ValidationMessageFor(model => model.Fantasia)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CEP)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.CEP)
            @Html.ValidationMessageFor(model => model.CEP)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Logradouro)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.Logradouro)
            @Html.ValidationMessageFor(model => model.Logradouro)
        </div>
        <div class="editor-participante" style="display: none; top: 0px" id="xnumero">
            @Html.LabelFor(model => model.Numero)
            @Html.TextBoxFor(model => model.Numero, new { style = "width: 100px" }) Compl.@Html.TextBoxFor(model => model.Compl, new { style = "width: 140px" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Bairro)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.Bairro)
            @Html.ValidationMessageFor(model => model.Bairro)
        </div>
        <div class="editor-participante" style="display: none; position: relative; top: 0px" id="xcidade">
            @Html.LabelFor(model => model.Cidade)
            @Html.TextBoxFor(model => model.Cidade, new { style = "width: 200px" })
            UF: @Html.DropDownListFor(x => x.UF, new SelectList(Model.UFs, "uf", "uf"), new { style = "width:70px;" })
        </div>
        <div class="editor-participante" style="display: none; position: relative; top: 0px" id="xfonecomercial">
            @Html.LabelFor(model => model.FoneComercial)
            <input type="text" name="dddfonecomercial" id="dddfonecomercial" maxlength="2" value="@Model.DDDFoneComercial" style="width:20px!important" />
            <input type="text" value="@Model.FoneComercial" name="fonecomercial"  id="fonecomercial" style="width:100px!important" />
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.URL)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.URL)
            @Html.ValidationMessageFor(model => model.URL)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.dtFundacao)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.dtFundacao)
            @Html.ValidationMessageFor(model => model.dtFundacao)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NomeContato)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.NomeContato)
            @Html.ValidationMessageFor(model => model.NomeContato)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CPF)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.CPF)
            @Html.ValidationMessageFor(model => model.CPF)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RG)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.RG)
            @Html.ValidationMessageFor(model => model.RG)
        </div>
        <div class="editor-participante" style="display: none; position: relative; top: 0px" id="xcelular">
            @Html.LabelFor(model => model.Celular)
            <input type="text" name="dddcelular" id="dddcelular" maxlength="2" value="@Model.DDDCelular" style="width:20px!important" />
            <input type="text" value="@Model.Celular" name="celular"  id="celular" style="width:100px!important" />
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="inputgrande">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.obs)
        </div>
        <div class="inputgrande">
            @Html.TextAreaFor(model => model.obs)
            @Html.ValidationMessageFor(model => model.obs)
        </div>
        <div class="editor-label">
            Visível
        </div>
        <div class="inputgrande">
            @if (Model.status == 1)
            {
                Model.statusb = true;
            }
            else
            {
                Model.statusb = false;
            }
            @Html.CheckBoxFor(model => model.statusb)
            @Html.ValidationMessageFor(model => model.status)
        </div>
        <p>&nbsp;</p>
        <table>
            <tr>
                <td>
                    <button name="button" class="botao01" value="register">Salvar</button>
                    @Html.Hidden("clienteid", Model.clienteid)
                    @Html.Hidden("dataincl", Model.DataIncl)
                    <input id="repreid" value="@ViewBag.repreid" type="hidden" />
                </td>
            </tr>
        </table>
    </div>
    <p>&nbsp;</p>
    <div class="row">
        <!-- Left col -->
        <div class="col-md-12">
            <!-- TABLE: LATEST ORDERS -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Cadastros</h3>
                    <div class="box-tools pull-right">@Model.Clientes.Count registro(s) listado(s)</div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table no-margin" id="ajax">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cliente</th>
                                    <th>Nome Contato</th>
                                    <th>Telefone</th>
                                    <th class="ico">Status</th>
                                    <th class="ico">Editar</th>
                                    <th class="ico">Excluir</th>
                                </tr>
                            </thead>
                            @{
            var st = "Inativo";
                            }
                            @foreach (var item in Model.Clientes)
                            {
                                st = "Inativo";

                                if (item.Status == 1)
                                {
                                    st = "Ativo";
                                }
                                <tr id="sumir" style="visibility: visible">
                                    <td class="minimo">@item.clienteid</td>
                                    <td class="medio">@item.Fantasia</td>
                                    <td class="pequeno">@item.NomeContato</td>
                                    <td class="minimo">@item.DDDFoneComercial @item.FoneComercial</td>
                                    <td class="ico">
                                        <img src="@Domain.Util.config.UrlImg/icone/ico-@st-.png" width="18" title="@st"></td>
                                    <td class="ico"><a href="@Domain.Util.config.UrlSite/Client/Cliente/@item.clienteid">
                                        <img src="@Domain.Util.config.UrlImg/icone/ico-edit.png" width="30" /></a></td>
                                    <td class="ico"><a href="@Domain.Util.config.UrlSite/Delete/Deletar/@item.clienteid?ac=ClienteDelete&cr=Client&txt=@item.Fantasia">
                                        <img src="@Domain.Util.config.UrlImg/icone/ico-delete.png" width="30" /></a></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="box-footer clearfix">&nbsp;</div>
            </div>
        </div>
    </div>
       
}
